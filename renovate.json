{
  "enabledManagers": ["pip_requirements", "flux"],
  "flux": {
    "fileMatch": [
      "infra/k8s-local/[^/]*\\.yaml$",
      "cluster/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchDatasources": ["helm"],
      "matchPackagePatterns": [".*"],
      "groupName": "Flux packages",
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchPackagePatterns": [".*"],
      "groupName": "Python packages",
      "matchUpdateTypes": ["minor", "patch"]
    }
      
  ]
  
}
